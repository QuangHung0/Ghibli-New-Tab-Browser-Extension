{
    "manifest_version": 3,
    "name": "Ghibli New Tab",
    "version": "1.0",
    "description": "Extension to custom your newtab",
    "chrome_url_overrides" :  {
      "newtab": "index.html"
    },
    "icons": {
        "16": "images/ghibli_icon_16.png",
        "32": "images/ghibli_icon_32.png",
        "48": "images/ghibli_icon_48.png",
        "128": "images/ghibli_icon_128.png"
    },

    "action": {
      "default_title" : "Ghilbi New Tab",
      "default_popup": "popup/popup.html",
      "default_icon":"images/ghibli_icon_16.png"
    }, 
    "permissions" : [
      "storage","geolocation"
    ]   
  }


